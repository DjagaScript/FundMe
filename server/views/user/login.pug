extends ../shared/_layout

block content
     section.cover.fullscreen.image-bg.overlay
        div.container.v-align-transform
            div.row
                div.col-md-4.col-md-offset-4.col-sm-8.col-sm-offset-2
                    div.feature.bordered.text-center
                        h4.uppercase Login Here
                        form.text-left(id="login-form" action="/camapigns", method="POST")
                            input.mb0(type='text', name='username', id="username", placeholder='Username' required)
                            input.mb0(type='password', name='password', id="password", placeholder='Password' required)
                            input(type='submit', value='Login')
                        p.mb0.hidden(id="error") Invalid username or password!
                        p.mb0 Not registered?
                            a(href='/auth/register') 
                                |  Click here to 
                                span.text-green Register
    
block scripts
    script(src="/public/js/login.js")